{
    "name": "sirroland/ckeditor-bundle",
    "type": "symfony-bundle",
    "description": "Provides a CKEditor integration for your Symfony3/4 Projects.",
    "keywords": [ "ckeditor" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        },
        {
            "name": "Eugene Ginko",
            "email": "asp31337@gmail.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "egeloen/json-builder": "^3.0",
        "symfony/dependency-injection": "^3.0|^4.0",
        "symfony/form": "^3.0|^4.0",
        "symfony/framework-bundle": "^3.0|^4.0"
    },
    "require-dev": {
        "composer/composer": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^5.0|^6.0|^7.0",
        "sensio/distribution-bundle": "^3.0.12|^4.0|^5.0",
        "symfony/asset": "^3.0|^4.0",
        "symfony/console": "^3.0|^4.0",
        "symfony/phpunit-bridge": "^3.0|^4.0",
        "symfony/templating": "^3.0|^4.0",
        "symfony/twig-bridge": "^3.0|^4.0",
        "symfony/yaml": "^3.0|^4.0",
        "twig/twig": "^1.12|^2.0"
    },
    "suggest": {
        "egeloen/form-extra-bundle": "Allows to load CKEditor asynchronously",
        "sensio/distribution-bundle": "Allows to install CKEditor via a script handler",
        "symfony/asset": "Allows to rewrite/version assets",
        "symfony/templating": "Allows to use PHP templates",
        "symfony/twig-bridge": "Allows to use Twig templates",
        "twig/twig": "Allows to use Twig templates"
    },
    "autoload": {
        "psr-4": { "Ivory\\CKEditorBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.0-dev"
        }
    }
}
